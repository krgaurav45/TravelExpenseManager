<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:background="@drawable/asd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.travelexpensemanager.UserActivity">


    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#0b0b0b"
        android:text="Add every detail of your tour to this app and track every minute deatils of your present or past tours anytime anywhere."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <Button
        style="@style/head"
        android:text="add expense"
        android:textColor="#f4043c"
        android:background="#4299998b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginTop="20dp"
        android:id="@+id/button3" />


    <Button
        android:text="view balanced budget"
        android:textColor="#f4043c"
        android:background="#4299998b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/button4"
        style="@style/head"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="reports"
        android:textColor="#f4043c"
        android:background="#4299998b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/button5"
        style="@style/head"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add new trip"
        android:textColor="#f4043c"
        android:background="#4299998b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button"
        style="@style/head"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="view all trips"
        android:textColor="#f4043c"
        style="@style/head"
        android:background="#4299998b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />


</RelativeLayout>
