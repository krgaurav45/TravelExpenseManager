<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/awsaure"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaurav.travelexpensemanager.ExpenseDetailsActivity">
    <TextView
        android:text="Trip_ID : "
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Expense_ID : "
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="Category :"
        android:layout_width="wrap_content"
        style="@style/head"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date :"
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView6" />

    <TextView
        android:text="Amount Spent :"
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView7"
        android:layout_toStartOf="@+id/editText5" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Trip_ID"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/editText1"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Expense_ID"
        android:ems="10"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/editText1"
        android:id="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Amt. Spent"
        android:ems="10"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/editText4"
        android:id="@+id/editText5" />


   <Spinner
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:inputType="textPersonName"
       android:ems="10"
       android:layout_above="@+id/textView6"
       android:layout_alignStart="@+id/editText2"
       android:id="@+id/editText3"
       android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Select Date"
        android:ems="10"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/editText3"
        android:id="@+id/editText4" />


    <Button
        android:text="submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonsubmit"
        android:textStyle="bold"
        android:textColor="#0a5981"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:text="EXPENSE DETAILS "
        style="@style/head"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
